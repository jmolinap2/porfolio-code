---
import { SPA_IMAGES_PATH } from "@/utils/constants";
const images = Array.from({ length: 8 }, (_, i) => `${SPA_IMAGES_PATH}Imagen${i + 2}.webp`);
---

<div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
  {images.map((src, i) => (
    <img src={src} alt={`Mascota ${i + 1}`} class="w-full h-40 object-cover rounded-lg shadow-md" loading="lazy" />
  ))}
</div>

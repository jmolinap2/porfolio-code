---
const personalImageAlt = 'Misi Spa';
import SocialPill from '@/components/SocialPill.astro';
import WhatsappIcon from '@/components/icons/Whatsapp.astro';
const profileImage = `${import.meta.env.BASE_URL}me-1.webp`;
---

<div class="w-full max-w-2xl md:max-w-3xl animate-fade-in-up text-center">
  <img
    class="rounded-full shadow-lg size-24 mx-auto mb-4"
    src={profileImage}
    alt={personalImageAlt}
    loading="lazy"
  />
  <h1 class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white">
    Misi Spa Ec-Gye
  </h1>
  <p class="mt-2 text-xl text-gray-700 dark:text-gray-300">
    Peluquería canina y felina a domicilio
  </p>
  <p class="mt-4 text-gray-700 dark:text-gray-300">
    ¡Tu mascota feliz, limpia y con estilo sin salir de casa!
  </p>
  <nav class="flex justify-center gap-4 mt-8">
    <SocialPill href="https://wa.me/593939090780">
      <WhatsappIcon class="size-4" />
      Agenda tu cita
    </SocialPill>
  </nav>
</div>

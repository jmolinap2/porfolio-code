---
import Angular from "./icons/Angular.astro"
import CSharp from "./icons/CSharp.astro"
import SqlServer from "./icons/SqlServer.astro"
import Nodejs from "./icons/Nodejs.astro"
import Postgresql from "./icons/Postgresql.astro"
import Django from "./icons/Django.astro"
import Python from "./icons/Python.astro"
import Bootstrap from "./icons/Bootstrap.astro"

const STACK = [
  { name: "Angular", icon: Angular },
  { name: "C# .NET", icon: CSharp },
  { name: "SQL Server", icon: SqlServer },
  { name: "Node.js", icon: Nodejs },
  { name: "PostgreSQL", icon: Postgresql },
  { name: "Django", icon: Django },
  { name: "Python", icon: Python },
  { name: "Bootstrap", icon: Bootstrap },
];
---

<section class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm text-white/90">
  {STACK.map(({ name, icon: Icon }) => (
    <div class="flex flex-col items-center justify-center gap-1 p-4 bg-white/5 dark:bg-white/10 border border-white/10 rounded-xl hover:scale-105 hover:shadow-lg transition-all duration-300">
      <Icon class="size-8" />
      <span class="font-semibold text-center">{name}</span>
    </div>
  ))}
</section>

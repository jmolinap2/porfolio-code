---
const { class: className = "" } = Astro.props;
---

<svg
  {...Astro.props}
  id="scroll-icon"
  class={`fixed bottom-6 right-6 z-50 w-10 h-10 text-cyan-400 transition-transform duration-75 ${className}`}
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
>
  <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
  <path
    d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 1 1-2.83 2.83l-.06-.06a1.65 1.65 0 0 0-1.82-.33
       1.65 1.65 0 0 0-1 1.51V21a2 2 0 1 1-4 0v-.09A1.65 1.65 0 0 0 9.4 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2
       2 0 1 1-2.83-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 1 1 0-4h.09a1.65
       1.65 0 0 0 1.51-1 1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 1 1 2.83-2.83l.06.06a1.65 1.65 0 0 0
       1.82.33h.09A1.65 1.65 0 0 0 9 3.09V3a2 2 0 1 1 4 0v.09c0 .69.4 1.3 1 1.51h.09a1.65 1.65 0 0 0
       1.82-.33l.06-.06a2 2 0 1 1 2.83 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82v.09c.69.3 1.3.91 1.51
       1.51H21a2 2 0 1 1 0 4h-.09c-.69 0-1.3.4-1.51 1z"
  />
</svg>

<script is:inline>
  const icon = document.getElementById('scroll-icon');

  window.addEventListener('scroll', () => {
    const rotation = window.scrollY * 0.5; // ajusta la velocidad de giro
    if (icon) {
      icon.style.transform = `rotate(${rotation}deg)`;
    }
  });
</script>
